string = input("Enter a string: ")

upper = 0
lower = 0

for ch in string:
    if ch.isupper():
        upper += 1
    elif ch.islower():
        lower += 1

print("Uppercase letters =", upper)
print("Lowercase letters =", lower)

#input
#Enter a string: Hello World
#output

#Uppercase letters = 2
#Lowercase letters = 8
